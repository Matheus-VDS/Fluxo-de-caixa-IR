@model SFinanceiro.ModelData.Entities.Usuario

@{
    ViewData["Title"] = "Details";
}
<h1 style="margin-top:80px;">Detalhes</h1>
<div>
    <dl class="row">
        <dt class = "col-sm-2" @Html.DisplayNameFor(model => model.Name)>
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2" @Html.DisplayNameFor(model => model.Email)>
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2" @Html.DisplayNameFor(model => model.Password)>
            Senha
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.UsuarioId">Editar</a> 
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>
