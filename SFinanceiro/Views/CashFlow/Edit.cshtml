@model FluxoCaixa.Application.ViewModel.CashFlowViewModel
@{
    ViewData["Title"] = "Editar Movimentação";
}

<div class="container mt-4">
    <h1 class="text-left mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    @Html.LabelFor(model => model.FlowTypeId, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.FlowTypeId, (SelectList)ViewBag.flowType, "Selecione..", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FlowName, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FlowName, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ActivityId, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.ActivityId, (SelectList)ViewBag.activity, "Selecione..", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.CollaboratorId, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.CollaboratorId, (SelectList)ViewBag.collaborator, "Selecione..", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.CollaboratorTypeID, new { @class = "form-label" })
                    @Html.DropDownListFor(model => model.CollaboratorTypeID, (SelectList)ViewBag.collaboratorTypes, "Selecione..", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Value, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: 600;
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>