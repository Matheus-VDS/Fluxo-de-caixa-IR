@model FluxoCaixa.Application.ViewModel.CashFlowViewModel
@{
    ViewData["Title"] = "Registrar fluxo de Caixa";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Status" value="true" />

                <div class="mb-4">
                    <label asp-for="FlowTypeId" class="form-label">Tipo de Movimentação</label>
                    @Html.DropDownListFor(model => model.FlowTypeId, (SelectList)ViewBag.flowType, "Selecione..", new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="FlowTypeId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="CollaboratorId" class="form-label">Colaborador</label>
                    @Html.DropDownListFor(model => model.CollaboratorId, (SelectList)ViewBag.collaborator, "Selecione..", new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="CollaboratorId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ActivityId" class="form-label">Atividade</label>
                    @Html.DropDownListFor(model => model.ActivityId, (SelectList)ViewBag.activity, "Selecione..", new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="ActivityId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="PaymentTypeId" class="form-label">Forma de Pagamento</label>
                    @Html.DropDownListFor(model => model.PaymentTypeId, (SelectList)ViewBag.paymentType, "Selecione..", new { @class = "form-control", @disabled = "disabled" })
                    <span asp-validation-for="CollaboratorId" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Value" class="form-label">Valor</label>
                    <input asp-for="Value" class="form-control" type="text" data-type="currency" placeholder="R$ 0,00" disabled/>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" disabled/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <!-- Botões de Ação -->
                <div class="form-group text-center">
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </form>

        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.6-beta.17/inputmask.min.js"></script>
<script src="~/js/CashFlow/Create.js"></script>

<style>
    h1 {
        font-weight: 700;
        color: #4a4a4a;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: 600;
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

<script src="~/js/Collaborator/Index.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
