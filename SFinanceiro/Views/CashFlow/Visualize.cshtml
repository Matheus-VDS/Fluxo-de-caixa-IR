@model FluxoCaixa.Application.ViewModel.CashFlowViewModel
@{
    ViewData["Title"] = "Visualizar Movimentação";
}

<div class="container mt-4">
    <h1 class="text-left mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Movimentação</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FlowTypeId)</dd>

                <dt class="col-sm-4">Nome da Movimentação</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FlowName)</dd>

                <dt class="col-sm-4">Tipo de Atividade</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityId)</dd>

                <dt class="col-sm-4">Colaborador</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CollaboratorId)</dd>

                <dt class="col-sm-4">Tipo de Colaborador</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CollaboratorTypeID)</dd>

                <dt class="col-sm-4">Valor</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Value)</dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: 600;
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

