@model FluxoCaixa.Application.ViewModel.ActivityViewModel

@{
    ViewData["Title"] = "Adicionar atividade";
}
<h1 class="text-center mb-4">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome da Atividade -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Nome da Atividade</label>
                    <input asp-for="Name" class="form-control" placeholder="Insira o nome da atividade" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Descrição -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Descrição</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descreva a atividade"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Botões de Ação -->
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    h1 {
        font-weight: 700;
        color: #4a4a4a;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: 600;
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
