@using Microsoft.AspNetCore.Identity
@using FluxoCaixa.Application.ViewModel


@inject SignInManager<IdentityUser> SignInManager

    @if (SignInManager.IsSignedIn(User))
    {
    <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Index", "Home")">
                Página Inicial
                <span class="visually-hidden">(current)</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href=" @Url.Action("Index", "Voluntarios") ">
                Voluntários
                <span class="visually-hidden">(current)</span>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="#">Atividades</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Financeiro</a>
        </li>
    </ul>

    <div class="nav-item">
        <form method="post" asp-controller="account" asp-action="logout">
            <button type="submit" style="width:auto" class="btn btn-primary">
                Sair @User.Identity.Name
            </button>
        </form>
    </div>
    }
       else
       {
       <div class="d-flex justify-content-end">
           <div class="nav-item me-2">
               <a class="btn btn-primary" asp-controller="account" asp-action="login">Entrar</a>
           </div>
           <div class="nav-item">
               <a class="btn btn-secondary" asp-controller="account" asp-action="register">Registrar</a>
           </div>
       </div>

       }



