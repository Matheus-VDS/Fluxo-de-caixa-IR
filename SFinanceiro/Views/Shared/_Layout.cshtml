<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FluxoCaixa</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/cosmo/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SFinanceiro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SFinanceiro\Views\Shared\sidebar.css" asp-append-version="true" />

    <style>

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        /* Estilos para a sidebar */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            background-color: #007bff; 
            padding-top: 20px;
        }

        .sidebar a.nav-link {
            color: white !important;
            padding: 10px 20px;
            display: block;
            text-decoration: none;
        }

        .sidebar a.nav-link:hover {
            color: #f8f9fa !important; /* Cor ao passar o mouse */
            background-color: #0056b3;
        }

        /* Ajusta o conteúdo para não sobrepor a sidebar */
        .content {
            margin-left: 220px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">FluxoCaixa</a>
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
        <a class="nav-link" asp-area="" asp-controller="Activity" asp-action="Index">Atividades</a>
        <a class="nav-link" asp-area="" asp-controller="Collaborator" asp-action="Index">Colaboradores</a>
        <a class="nav-link" asp-area="" asp-controller="CollaboratorType" asp-action="Index">Tipo Colaborador</a>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <div class="d-flex justify-content-end w-100">
                <span>Sistema de Fluxo de Caixa</span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
