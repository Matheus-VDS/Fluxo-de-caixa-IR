@model IEnumerable<FluxoCaixa.Infra.Data.Entities.Collaborator>

@{
    ViewData["Title"] = "Index";
}

<p>
<div class="mt-3">
    <h1 style="margin-top: 80px;">Lista de voluntários</h1>
</div>
    <a class="btn btn-primary mt-3" asp-action="Create">Adicionar novo Colaborador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col" @Html.DisplayNameFor(model => model.FullName)> Nome
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model) {
        <tr class="table-primary">
            <td>
                    @Html.DisplayFor(modelItem => user.FullName)
            </td>

            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@user.Id">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
