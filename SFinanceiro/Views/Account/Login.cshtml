@using SFinanceiro.ModelData.ViewModel
@model LoginViewModel

@{
    ViewBag.title = "Login.";
}

<div class="container" style="padding-top: 100px;">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="row">
                    <div class="col-md-5">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" id="email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Senha</label>
                                <input asp-for="Password" class="form-control" id="password" placeholder="Senha">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mt-5">Entrar</button>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

