@    using FluxoCaixa.Infra.Data.ModelData.ViewModel
@model RegistroViewModel

@{
    ViewBag.title = "Registrar Usuário";
}

<div class="container" style="padding-top: 100px;">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="row">
                    <div class="col-md-5">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" id="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Senha</label>
                                <input asp-for="Password" class="form-control" id="Password" placeholder="Senha">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirme a senha</label>
                                <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirme o senha">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary mt-5">Registrar</button>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


