@model FluxoCaixa.Application.ViewModel.CollaboratorTypeViewModel
@{
    ViewData["Title"] = "Detalhes do Tipo de Colaborador";
}
<h1 class="text-center mb-4 fw-bold">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Nome do Tipo -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Descrição</label>
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="form-group mb-3">
                <label class="form-check-label">
                    <label asp-for="Status" class="form-label">Status</label>
                    <input class="form-check-input" asp-for="Status" disabled />
                </label>
            </div>

            <!-- Botão Voltar -->
            <div class="text-center">
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: 600;
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: none;
        border: 1px solid #ccc;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
